{
  "name": "Tabs Extender",
  "manifest_version": 2,
  "version": "1",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
  }],
  "commands": {
    "flush-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Down",
        "mac": "Command+Down"
      },
      "description": "Flush current tab to the rightmost tab"
    }
  },
  "permissions": ["tabs"]
}
